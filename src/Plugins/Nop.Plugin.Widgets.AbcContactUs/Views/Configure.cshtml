@model ContactUsConfigModel

@using Nop.Plugin.Widgets.AbcContactUs.Models

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="AbcContactUs" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ContactUsEmail" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ContactUsEmail" />
                        <span asp-validation-for="ContactUsEmail"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="AdditionalEmails" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AdditionalEmails" />
                        <span asp-validation-for="AdditionalEmails"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="IsEmailSubmissionSkipped" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="IsEmailSubmissionSkipped" />
                        <span asp-validation-for="IsEmailSubmissionSkipped"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        &nbsp;
                    </div>
                    <div class="col-md-9">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>