@model SlidePublicModel

@{
    Layout = null;
}

<div class="picture-slide">
    @if (string.IsNullOrEmpty(Model.Url))
    {
        <img alt="@Model.Alt"
             src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
             data-lazy="@Model.PicturePath"
             data-mobilePictureSrc="@Model.MobilePicturePath"
             data-desktopPictureSrc="@Model.PicturePath" />
    }
    else
    {
        <a href="@Model.Url">
            <img alt="@Model.Alt"
                 src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                 data-lazy="@Model.PicturePath"
                 data-mobilePictureSrc="@Model.MobilePicturePath"
                 data-desktopPictureSrc="@Model.PicturePath" />
        </a>
    }
</div>
