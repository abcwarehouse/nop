@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="product-grid cross-sells">
        <div class="title">
            <strong>@T("ShoppingCart.CrossSells")</strong>
        </div>
        <div class="item-grid">
            @{
                var i = 1;
            }

            @foreach (var product in Model)
            {
                <div class="item-box">
                    @await Html.PartialAsync("_ProductBox", product)
                    @await Component.InvokeAsync("Widget", new { widgetZone = "GAEnhanced_Impression", additionalData = (string.Format("{0}|{1}|{2}", product.Id, i++, "Cross Sell Products")) })
                </div>
            }
        </div>
    </div>
}