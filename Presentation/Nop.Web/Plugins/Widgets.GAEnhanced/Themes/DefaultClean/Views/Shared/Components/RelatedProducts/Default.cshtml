@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="related-products-grid product-grid">
        <div class="title">
            <strong>@T("Products.RelatedProducts")</strong>
        </div>
        <div class="item-grid">
            @{
                var i = 1;
            }
            @foreach (var item in Model)
            {
                <div class="item-box">@await Html.PartialAsync("_ProductBox", item)</div>
                @await Component.InvokeAsync("Widget", new { widgetZone = "GAEnhanced_Impression", additionalData = (string.Format("{0}|{1}|{2}", item.Id, i++, "Related Products")) })
            }
        </div>
    </div>
}